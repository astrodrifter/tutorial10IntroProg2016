def drawText(): 
   pic=makePicture(pickAFile()) 
   #addText(picture,x coordinate,y coordinate,"TEXT",colour)
   addText(pic,getWidth(pic)/3,getHeight(pic)/3,"Best Movie Ever!!")
   repaint(pic)

