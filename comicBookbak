# make and empty canvas, add four pic horizontaly then add text.
def makeComic():
   #while(addPic==true):
     
     #get photos
     pic1=makePicture(pickAFile())
     pic2=makePicture(pickAFile()) 
     pic3=makePicture(pickAFile())
     pic4=makePicture(pickAFile())
     
     #get heights and widths
     h1=getHeight(pic1)
     h2=getHeight(pic2)
     h3=getHeight(pic3)
     h4=getHeight(pic4)
     w1=getWidth(pic1)
     w2=getWidth(pic2)+w1
     w3=getWidth(pic3)+w2
     w4=getWidth(pic4)+w3
     totalWidth=w4+15
     
     #get max height
     heights=[h1,h2,h3,h4]
     maxHeight=heights[0]
     for i in range(0,4):
      if heights[i]>maxHeight:
        maxHeight=heights[i]+5
     print "max height = "+str(maxHeight)
     
     #write on each pic
     addWritting(pic1,pic2,pic3,pic4,h1,h2,h3,h4)
     
     #make canvas
     canvas=makeEmptyPicture(totalWidth,maxHeight)
         
     #copy pics to canvas
     copyPic1(pic1,canvas,w1,h1)
     copyPic2(pic2,canvas,w1,w2,h2)
     copyPic3(pic3,canvas,w2,w3,h3)
     copyPic4(pic4,canvas,w3,w4,h4)
     
def addWritting(pic1,pic2,pic3,pic4,h1,h2,h3,h4):
    for i in range(0,4):
      if i==0:
        for x in range(40,200):
          for y in range(h1-90,h1-20):
            pixl=getPixel(pic1,x,y)
            setRed(pixl,248)
            setGreen(pixl,248)
            setBlue(pixl,255)
        addText(pic1,50,h1-70,"The Villan")
        addText(pic1,50,h1-50,"has taken our")
        addText(pic1,50,h1-30,"herso's girl!")
      elif i==1:
        for x in range(40,300):
          for y in range(h2-90,h2-20):
            pixl2=getPixel(pic2,x,y)
            setRed(pixl2,248)
            setGreen(pixl2,248)
            setBlue(pixl2,255)
        addText(pic2,50,h2-70,"He has thretened randsom!")
        addText(pic2,50,h2-50,"The train arrives")
        addText(pic2,50,h2-30,"in 3 minutes!!!")
      elif i==2:
        for x in range(40,300):
          for y in range(h3-90,h3-20):
            pixl3=getPixel(pic3,x,y)
            setRed(pixl3,248)
            setGreen(pixl3,248)
            setBlue(pixl3,255)
        addText(pic3,50,h3-70,"Our hero hears the bad news")
        addText(pic3,50,h3-50,"He stands in the rain")
        addText(pic3,50,h3-30,"looking handsom for a bit...")
      elif i==3:
        for x in range(40,300):
          for y in range(h4-90,h4-20):
            pixl4=getPixel(pic4,x,y)
            setRed(pixl4,248)
            setGreen(pixl4,248)
            setBlue(pixl4,255)
        addText(pic4,50,h4-70,"Our hero defeats the villan,")
        addText(pic4,50,h4-50,"and dicthes his girl")
        addText(pic4,50,h4-30,"for Wonderwomen!!!")
      repaint(pic1)
      repaint(pic2)
      repaint(pic3)
      repaint(pic4)     
     
def copyPic1(pic1,canvas,w1,h1):
     #pic1
     for x in range(0,w1-1):
       for y in range(0,h1):
         oldPix=getPixel(pic1,x,y)
         newPix=getPixel(canvas,x,y)
         color=getColor(oldPix)
         setColor(newPix,color)
     repaint(canvas)
          
def copyPic2(pic2,canvas,w1,w2,h2):
     start= w1+5
     for i in range(start,w2-1):     
       for j in range(0,h2):
         oldPix=getPixel(pic2,i-start,j)
         newPix=getPixel(canvas,i,j)
         color=getColor(oldPix)
         setColor(newPix,color)
     repaint(canvas)
     
def copyPic3(pic3,canvas,w2,w3,h3):
     start=w2+5
     for i in range(start,w3-1):     
       for j in range(0,h3):
         oldPix=getPixel(pic3,i-start,j)
         newPix=getPixel(canvas,i,j)
         color=getColor(oldPix)
         setColor(newPix,color)
     repaint(canvas)

def copyPic4(pic4,canvas,w3,w4,h4):
     start=w3+5
     for i in range(start,w4-1):     
       for j in range(0,h4):
         oldPix=getPixel(pic4,i-start,j)
         newPix=getPixel(canvas,i,j)
         color=getColor(oldPix)
         setColor(newPix,color)
     repaint(canvas)    
     
  


